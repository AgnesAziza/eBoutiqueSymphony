<!DOCTYPE html>
<html>
    <head>
    <style>
            body {
                margin: 0;
                padding: 0;
            }

            nav {
                display: flex;
                justify-content: space-between;
                padding: 15px;
                background-color: black;
            }

            nav a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
            }
        </style>
    </head>
    <body>
        <nav>
            <div>
                <a href="{{ path('home') }}">Home</a>
                <a href="{{ path('store_category', {'id': 2}) }}">Roman</a>
                <a href="{{ path('store_category', {'id': 3}) }}">Nouvelle</a>
                <a href="{{ path('store_category', {'id': 4}) }}">Théâtre</a>
            </div>

            <div>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Connexion</a>
                {% endif %}
                <a href="{{ path('app_cart') }}">Panier</a>
                <a href="{{ path('app_profile') }}">Profile</a>

            </div>
        </nav>

        {% block body %}{% endblock %}
    </body>
</html>
